<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/productMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/productMsg"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/appleImg"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/apple"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/apple" />

                <TextView
                    android:id="@+id/appleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apple" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/fineappleImg"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/fineapple"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/fineapple" />

                <TextView
                    android:id="@+id/fineappleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fineapple" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/pomegranateImg"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/pomegranate"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/pomegranate" />

                <TextView
                    android:id="@+id/pomegranateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pomegranate" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/peachImg"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/peach"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/peach" />

                <TextView
                    android:id="@+id/peachTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peach" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/strawberryImg"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/strawberry"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/strawberry" />

                <TextView
                    android:id="@+id/strawberryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strawberry" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</GridLayout>